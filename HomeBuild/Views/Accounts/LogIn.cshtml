@model HomeBuild.ViewModel.AccountsVM.LogInVM
@{
    ViewData["Title"] = "LogIn";
}
<br></br>
<div class="login-wrapper">
    <div class="login-container">
        <div class="login-card">
            <h2 class="text-center">Влизане в акаунт</h2>
            <form asp-action="LogIn" method="post" class="login-form">
                <div class="form-group">
                    <input asp-for="Email" placeholder="Имейл" type="text" id="form3Example1cg" class="form-control" />
                    <span asp-validation-for="Email" class="error-message"></span>
                    @if (TempData["errEmail"] != null && TempData["email"].ToString() == "email")
                    {
                        <span class="text-danger">@TempData["errEmail"]</span>
                    }
                </div>

                <div class="form-group">
                    <input asp-for="Password" placeholder="Парола" type="password" id="form3Example4cg" class="form-control" />
                    <span asp-validation-for="Password" class="error-message"></span>
                    @if (TempData["errPass"] != null && TempData["pass"].ToString() == "pass")
                    {
                        <span class="text-danger">@TempData["errPass"]</span>
                    }
                </div>

                <div class="submit-btn-container">
                    <button type="submit" class="submit-btn">Влизане</button>
                </div>

                <p class="text-center">
                    Don't have an account? <a href="~/Accounts/Register" class="register-link">Регистрирай се тук</a>
                </p>
            </form>
        </div>
    </div>
</div>
